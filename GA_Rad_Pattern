    for (i=0;i<array_size;i++)
    {
        int j;
        for (j=0;j<array_size2;j++)
        {
            fprintf(fptr,"%f\t",output[i][j][k]);
        }
        fprintf(fptr,"\n");
    }
}
fclose(fptr);

FILE *fptr2=fopen(writename2,"w");
